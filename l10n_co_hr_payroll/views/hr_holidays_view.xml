<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_leave_view_form_manager_inherit" model="ir.ui.view">
            <field name="name">Novedades</field>
            <field name="model">hr.leave</field>
            <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager"/>
            <field name="priority">30</field>
            <field name="arch" type="xml">
            <data>
              
              <xpath expr="//field[@name='name']" position="before">
                    <field name="number_of_hours_temp" class="oe_inline" attrs="{'invisible' : [('request_unit_hours','=', False)], 'readonly': [('state', 'not in', ('draft','confirm'))]}"/> 
              </xpath>

            </data>
            </field>
        </record>
        <record id="editview_calendar_event_type_inherit" model="ir.ui.view">
            <field name="name">Tipos Novedades</field>
            <field name="model">calendar.event.type</field>
            <field name="inherit_id" ref="calendar.view_calendar_event_type_tree"/>
            <field name="arch" type="xml">
              <data>
                 <xpath expr="field[@name='name']" position="after">
                      <field name="notunaffected_days"/>
                      <field name="is_hours_additional"/>         
                 </xpath>
              </data>
            </field>
        </record>
        <record id="edit_holiday_status_form_inherit" model="ir.ui.view">
            <field name="name">Tipos Novedades Status</field>
            <field name="model">hr.leave.type</field>
            <field name="inherit_id" ref="hr_holidays.edit_holiday_status_form"/>
            <field name="priority">20</field>
            <field name="arch" type="xml">
              <data>
                 <xpath expr="//field[@name='time_type']" position="after">
                      <field name="is_hollidays"/>         
                 </xpath>
                 <xpath expr="//field[@name='categ_id']" position="replace">
                      <field name="categ_id" string="CategorÃ­a Ausencia"/>         
                 </xpath>
              </data>
            </field>
        </record>
        
    </data>
</openerp>